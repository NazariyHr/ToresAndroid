<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/offset_x4">

    <LinearLayout
        android:id="@+id/llPartnerProgram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/offset_x2"
        android:paddingTop="@dimen/offset_x3"
        android:paddingBottom="@dimen/offset_x3">

        <ImageView
            android:layout_width="@dimen/icon_size_m"
            android:layout_height="@dimen/icon_size_m"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_partner_program" />

        <TextView
            style="@style/Widget.Tores.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/offset_x2"
            android:text="@string/partner_program" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llPartners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/offset_x2"
        android:paddingTop="@dimen/offset_x3"
        android:paddingBottom="@dimen/offset_x3">

        <ImageView
            android:layout_width="@dimen/icon_size_m"
            android:layout_height="@dimen/icon_size_m"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_mining_connect" />

        <TextView
            style="@style/Widget.Tores.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/offset_x2"
            android:text="@string/partners" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llRanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/offset_x2"
        android:paddingTop="@dimen/offset_x3"
        android:paddingBottom="@dimen/offset_x3">

        <ImageView
            android:layout_width="@dimen/icon_size_m"
            android:layout_height="@dimen/icon_size_m"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_ranks" />

        <TextView
            style="@style/Widget.Tores.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/offset_x2"
            android:text="@string/ranks" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llContacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/offset_x2"
        android:paddingTop="@dimen/offset_x3"
        android:paddingBottom="@dimen/offset_x3">

        <ImageView
            android:layout_width="@dimen/icon_size_m"
            android:layout_height="@dimen/icon_size_m"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_contacts" />

        <TextView
            style="@style/Widget.Tores.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/offset_x2"
            android:text="@string/contacts" />
    </LinearLayout>

</LinearLayout>