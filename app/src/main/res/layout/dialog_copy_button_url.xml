<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/Widget.Tores.TextView.Title.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/offset_x12"
            android:layout_marginTop="@dimen/offset_x6"
            android:text="@string/our_button_for_your_site"
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/llClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/offset_x2"
            android:padding="@dimen/offset_x2">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="@dimen/offset_x2"
                android:src="@drawable/ic_close" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        style="@style/Widget.Tores.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/offset_x4"
        android:layout_marginVertical="@dimen/offset_x4"
        android:gravity="center"
        android:text="@string/dont_forget_set_our_button" />

    <LinearLayout
        android:id="@+id/llButtonHtmlCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/offset_x4"
        android:layout_marginTop="@dimen/offset_x"
        android:layout_marginBottom="@dimen/offset_x6"
        android:background="@drawable/bg_round_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvButtonHtmlCode"
            style="@style/Widget.Tores.TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="@dimen/offset_x"
            android:layout_marginStart="@dimen/offset_x3"
            android:layout_weight="1"
            android:text="@string/our_button_html_code" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/icon_size_m"
                android:layout_height="@dimen/icon_size_m"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/offset_x2"
                android:src="@drawable/ic_copy" />

        </FrameLayout>
    </LinearLayout>
</LinearLayout>