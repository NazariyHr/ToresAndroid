<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextViews -->
    <style name="Widget.Tores.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Widget.Tores.TextView.Title.Bold" parent="Widget.Tores.TextView">
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Widget.Tores.TextView.Link" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.Tores.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Tores.Button.Wrap" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/offset_x12</item>
        <item name="android:layout_marginEnd">@dimen/offset_x12</item>
        <item name="cornerRadius">@dimen/corner_20</item>
        <item name="android:paddingTop">@dimen/offset_x4</item>
        <item name="android:paddingBottom">@dimen/offset_x4</item>
    </style>

    <style name="Widget.Tores.Button.Wide" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/offset_x12</item>
        <item name="android:layout_marginEnd">@dimen/offset_x12</item>
        <item name="cornerRadius">@dimen/corner_20</item>
        <item name="android:paddingTop">@dimen/offset_x4</item>
        <item name="android:paddingBottom">@dimen/offset_x4</item>
    </style>

    <style name="Widget.Tores.Button.Wide.Small" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">@dimen/corner_12</item>
        <item name="android:paddingTop">@dimen/offset_x2</item>
        <item name="android:paddingBottom">@dimen/offset_x2</item>
    </style>

    <style name="Widget.Tores.Button.Wide.Small.Bordered" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="cornerRadius">@dimen/corner_8</item>
        <item name="iconTint">@color/black</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Text Inputs -->
    <style name="Widget.Tores.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="Widget.Tores.TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="Widget.Tores.TextInputLayout.OutlinedBox.DatePicker" parent="Widget.Tores.TextInputLayout.OutlinedBox">
        <item name="endIconDrawable">@drawable/ic_calendar</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="Widget.Tores.TextInputEditText.DatePicker" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:longClickable">false</item>
    </style>

    <!--region Dialogs -->
    <style name="Theme.Tores.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/secondary_color</item>
        <item name="android:datePickerStyle">@style/Widget.Tores.Dialog.DatePicker</item>
    </style>

    <style name="Widget.Tores.Dialog.DatePicker" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/dark_primary_color</item>
        <item name="android:yearListSelectorColor">@color/secondary_color</item>
        <item name="android:datePickerMode">calendar</item>
    </style>
    <!--endregion-->

    <!--region Bottom Navigation -->
    <style name="Widget.Tores.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Tores.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.Tores.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <!--endregion-->

    <!--region CarViews -->
    <style name="Widget.Tores.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/corner_8</item>
        <item name="cardElevation">@dimen/elevation_8</item>
        <item name="cardUseCompatPadding">true</item>

    </style>
    <!--endregion -->

</resources>